.card-item{
  background: white;
  border-radius: 20px;
  padding: 10px 15px;
  display: flex;
  flex-direction: column;
  width: 94%;
  height: 220px;
  margin: 10px auto;
}

.card-item text{
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 12px;
  margin-left: 10px;

}
.card-item image{
  height: 160px;
  width: 320px;
  border-radius: 10px;
}

